<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_take_picture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/txtview_take_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a picture"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"/>

        <Button
            android:id="@+id/take_photography_button"
            style="@style/LoginButtonStyle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/add_estate_activity_take_photography_button"
            android:textColor="@color/white"
            app:backgroundTint="@color/gold"
            android:padding="5dp"
            app:icon="@drawable/baseline_camera_alt_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtview_take_picture"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/take_from_gallery_button"
            style="@style/LoginButtonStyle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/add_estate_activity_take_image_from_gallery_button"
            android:textColor="@color/white"
            app:backgroundTint="@color/gold"
            app:icon="@drawable/baseline_image_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/txtview_take_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>