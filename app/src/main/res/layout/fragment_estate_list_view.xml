<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gold_light"
    tools:context=".ui.fragments.EstateListViewFragment">

    <TextView
        android:id="@+id/estate_list_fragment_noproperty_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/estate_list_view_text"
        android:layout_gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/estate_list_fragment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:listitem="@layout/item_estate_fragment_listview" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_property_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:tint="@color/white"
        android:src="@drawable/baseline_search_24"
        app:backgroundTint="@color/gold"/>

</FrameLayout>