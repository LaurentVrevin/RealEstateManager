<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_listview_fragment">

    <fragment
        android:id="@+id/nav_listview_fragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragments.EstateListViewFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_estate_list_view" >
        <action
            android:id="@+id/action_estateListViewFragment_to_estateDetailViewFragment"
            app:destination="@id/nav_detailview" />
    </fragment>
    <fragment
        android:id="@+id/nav_detailview"
        android:name="com.openclassrooms.realestatemanager.ui.fragments.EstateDetailViewFragment"
        android:label="DETAIL VIEW"
        tools:layout="@layout/fragment_estate_detail_view" />
    <argument
        android:name="selectedItemId"
        app:argType="integer" />

    <fragment
        android:id="@+id/nav_mapViewFragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragments.MapViewFragment"
        android:label="Map View"
        tools:layout="@layout/fragment_map_view">

    </fragment>
</navigation>