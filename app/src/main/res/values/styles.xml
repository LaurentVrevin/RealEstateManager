<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- couleur de la toolbar etc -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- couleur quand on clique sur un objet type checkbox etc -->
        <item name="colorAccent">@color/gold</item>
        <!-- couleur du text etc -->
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- couleur du text dans les editbox-->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>


    </style>

    <style name="AppTheme.WithActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <!-- couleur de la toolbar etc -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- couleur quand on clique sur un objet type checkbox etc -->
        <item name="colorAccent">@color/gold</item>
        <!-- couleur du text etc -->
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- couleur du text dans les editbox-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- couleur du text dans les editbox-->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>


    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:foregroundTint">@color/white</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/gold</item>
    </style>

</resources>
